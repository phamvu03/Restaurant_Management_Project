<!--                        <ImageView>-->
<!--                            <Image/>-->
<!--                        </ImageView>-->
<!--                    </graphic>-->
<!--                </Button>-->
<!--            </HBox>-->
        </HBox>
<!--        Khu vực cho chức năng sắp xếp-->
        <HBox>
            <Text text="Sắp xếp theo: "/>
            <ToggleButton fx:id="nameSort" styleClass="name-sort"/>
            <ToggleButton fx:id="priceSort" styleClass="price-sort"/>
        </HBox>
<!--        Khu vực hiển thị các item-->
        <TableView fx:id="listItem">
        </TableView>
    </VBox>
</StackPane>
</HBox>
