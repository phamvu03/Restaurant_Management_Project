<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane HBox.Hgrow="ALWAYS" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.restaurant.restaurant_management_project.controller.AddOrderController">
    <VBox alignment="CENTER" spacing="15" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="30.0" />
        </padding>

        <Label minHeight="100.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Thêm Đơn Hàng Mới">
            <font>
                <Font name="Cambria" size="20.0" />
            </font>
        </Label>

        <GridPane hgap="10" vgap="10">
            <Label text="Tên Khách:" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <font>
                    <Font name="Cambria" size="16.0" />
                </font>
            </Label>
            <TextField fx:id="tenKhachField" minHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <font>
                    <Font name="Cambria" size="16.0" />
                </font>
            </TextField>

            <Label text="Số Khách:" GridPane.columnIndex="0" GridPane.rowIndex="2">
                <font>
                    <Font name="Cambria" size="16.0" />
                </font>
            </Label>
            <TextField fx:id="soKhachField" minHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="2">
                <font>
                    <Font name="Cambria" size="16.0" />
                </font>
            </TextField>

            <Label text="Số Điện Thoại:" GridPane.columnIndex="0" GridPane.rowIndex="3">
                <font>
                    <Font name="Cambria" size="16.0" />
                </font>
            </Label>
            <TextField fx:id="sdtField" minHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="3">
                <font>
                    <Font name="Cambria" size="16.0" />
                </font>
            </TextField>

            <Label text="Thời Gian" GridPane.columnIndex="0">
                <font>
                    <Font name="Cambria" size="16.0" />
                </font>
            </Label>
            <Label fx:id="thoiGianTaoLabel" GridPane.columnIndex="1">
                <font>
                    <Font name="Cambria" size="16.0" />
                </font>
            </Label>
            <Label text="Bàn:" GridPane.columnIndex="0" GridPane.rowIndex="4">
                <font>
                    <Font name="Cambria" size="16.0" />
                </font>
            </Label>
            <ComboBox fx:id="banComboBox" minHeight="40" minWidth="100" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="4" />
            <columnConstraints>
                <ColumnConstraints />
                <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="40" />
                <RowConstraints minHeight="40" />
                <RowConstraints minHeight="40" />
                <RowConstraints minHeight="40" />
                <RowConstraints minHeight="40" />
            </rowConstraints>
        </GridPane>

        <HBox alignment="CENTER_RIGHT" spacing="20.0">
            <Button onAction="#handleCancel" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Hủy">
            <font>
               <Font name="SansSerif Bold" size="16.0" />
            </font></Button>
            <Button onAction="#handleSave" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Lưu">
            <font>
               <Font name="SansSerif Bold" size="16.0" />
            </font></Button>
         <padding>
            <Insets top="40.0" />
         </padding>
        </HBox>
    </VBox>
</AnchorPane>
