<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.restaurant.restaurant_management_project.controller.BanDialogController">
    <content>
        <GridPane hgap="10" vgap="10">
            <Label text="Mã bàn:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtMaBan" GridPane.rowIndex="0" GridPane.columnIndex="1" disable="true"/>

            <Label text="Tên bàn:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="txtTenBan" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Vị trí:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <ComboBox fx:id="cbViTri" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Số chỗ:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <Spinner fx:id="spSoCho" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Trạng thái:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <ComboBox fx:id="cbTrangThai" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        </GridPane>
    </content>

    <buttonTypes>
        <ButtonType text="Hủy" buttonData="CANCEL_CLOSE"/>
        <ButtonType text="Lưu" buttonData="OK_DONE"/>
    </buttonTypes>
</DialogPane>