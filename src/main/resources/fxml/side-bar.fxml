        <Region HBox.hgrow="ALWAYS"/>
        <FontIcon iconLiteral="fas-lock-open" iconSize="10" fx:id="lockIcon" visible="false"/>
    </HBox>
    <VBox  styleClass="nav-menu" >
        <Button fx:id="dasBtn" styleClass="nav-button"  text="Dashboard" onAction="#navigate">
            <graphic>
                <FontIcon iconLiteral="fas-money-check-alt" iconSize="20"/>
            </graphic>
        </Button>
        <Button fx:id="button1" styleClass="nav-button" text="Quản lý nhân sự" onAction="#navigate">
            <graphic>
                <FontIcon iconLiteral="fas-users" iconSize="20"/>
            </graphic>
        </Button>
        <Button fx:id="menuBtn" styleClass="nav-button" text="Quản lý thực đơn" onAction="#navigate">
            <graphic>
                <FontIcon iconLiteral="fas-list-alt" iconSize="20"/>
            </graphic>
        </Button>
        <Button fx:id="button3" styleClass="nav-button" text="Thống kê doanh thu" onAction="#navigate">
            <graphic>
                    <FontIcon iconLiteral="fas-money-check-alt" iconSize="20"/>
            </graphic>
        </Button>
        <Button fx:id="button4" styleClass="nav-button" text="Danh sách bàn ăn" onAction="#navigate">
            <graphic>
                    <FontIcon iconLiteral="fas-table" iconSize="20"/>
            </graphic>
        </Button>
        <Button fx:id="button5" styleClass="nav-button" text="Thống kê doanh thu" onAction="#navigate">
            <graphic>
                    <FontIcon iconLiteral="fas-money-check-alt" iconSize="20"/>
            </graphic>
        </Button>
        <Button fx:id="button6" styleClass="nav-button" text="Thống kê doanh thu" onAction="#navigate">
            <graphic>
                    <FontIcon iconLiteral="fas-money-check-alt" iconSize="20"/>
            </graphic>
        </Button>
    </VBox>
</VBox>
